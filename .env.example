# Environment: development | production | test
NODE_ENV=development

# Database (PostgreSQL connection string)
DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require

# JWT signing secret — must be at least 16 characters; use a strong random value in production
JWT_SECRET=change-me-use-a-strong-random-secret

# bcrypt hashing rounds (8–20). Higher = more secure but slower. 10 is a good default.
BCRYPT_ROUNDS=10
